  <% if @item_rank.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <strong><%= pluralize(@item_rank.errors.count, "error") %> prohibited this item_rank from being saved:</strong>

      <ul>
      <% @item_rank.errors.full_messages.each do |message| %>
        <li><%= message %></li>
