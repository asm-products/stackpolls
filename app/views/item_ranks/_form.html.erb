        <div class="col-sm-11">
          <%= f.text_field :survey_item_id, { class: 'form-control' } %>
      </div>
    </div>
  </div>
  <div class="col-sm-12">
    <div class="form-group<%= f.object.errors[:rank].empty? ? '' : ' has-error has-feedback' %>">
