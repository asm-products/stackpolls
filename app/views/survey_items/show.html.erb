<% content_for :page_title do %>
Survey Response: Single Item -
<% end %>
<div class="container">
  <div class="page-header">
    <h1>Survey Response: Single Item</h1>
  </div>
  
  <p>
    <strong>Survey:</strong>
    <%= @survey_item.survey %>
  </p>

  <p>
    <strong>Headline:</strong>
    <%= @survey_item.headline %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @survey_item.description %>
  </p>

  <p>
    <strong>Thumbnail url:</strong>
    <%= @survey_item.thumbnail_url %>
  </p>


  <div class="pull-left">
    <%= link_to '&laquo; Back'.html_safe, survey_items_path, class: 'btn btn-default' %> 
  </div>
  <div class="pull-right">
    <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit'.html_safe, edit_survey_item_path(@survey_item), class: 'btn btn-warning' %> 
