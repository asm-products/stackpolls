<% content_for :page_title do %>
Account - <%= @user.name %> -
<% end %>
<div class="container">
  <div class="page-header">
    <h1>
      Account

      <div class="pull-right">
        <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit'.html_safe, edit_user_path(@user), class: 'btn btn-warning' %> 
      </div>
    </h1>
  </div>
  <div class="row">
    <div class="col-sm-2 text-center">
      <p>&nbsp;</p>
      <%= image_tag @user.picurl %>
    </div>
    <div class="col-sm-10">
      <h3><%= @user.name %> &lt;<%= link_to @user.email, "mailto:#{@user.email}" %>&gt;</h3>
      <p class="text-muted">
        <strong>Google ID:</strong>
        <%= @user.googleid %>
      </p>
    </div>
  </div>
</div>
