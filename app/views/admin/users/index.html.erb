<% content_for :page_title do %>
users -
<% end %>
<div class="container">
  <div class="page-header">
    <h1>Listing users</h1>
  </div>
  
  <div class="pull-right">
    <%= link_to '+ New user', new_user_path, class: 'btn btn-success' %>
  </div>
  
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Googleid</th>
        <th>Name</th>
        <th>Email</th>
        <th>Picurl</th>
        <th>Super?</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr class="linked-row" data-href="<%= user_path(user) %>">
        <td><%= link_to user.googleid, user %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= image_tag user.picurl %></td>
        <td><%= user.superuser %></td>
      </tr>
      <% end %>
    </tbody>
  </table>


</div>