<% content_for :page_title do %>
Admin - <%= @survey.title %> - Survey -
<% end %>
<div class="container">
  <div class="page-header">
    <h1>Survey</h1>
  </div>
  
  <p>
    <strong>User:</strong>
    <%= @survey.user %>
  </p>

  <p>
    <strong>Permalink:</strong>
    <%= @survey.permalink %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @survey.title %>
  </p>

  <p>
    <strong>Headline:</strong>
    <%= @survey.headline %>
  </p>

  <p>
    <strong>Subheader:</strong>
    <%= @survey.subheader %>
  </p>

  <p>
    <strong>Thanks headline:</strong>
    <%= @survey.thanks_headline %>
  </p>

  <p>
    <strong>Thanks subheader:</strong>
    <%= @survey.thanks_subheader %>
  </p>

  <p>
    <strong>Thanks continue url:</strong>
    <%= @survey.thanks_continue_url %>
  </p>

  <p>
    <strong>Invite required:</strong>
    <%= @survey.invite_required %>
  </p>


  <div class="pull-left">
    <%= link_to '&laquo; Back'.html_safe, surveys_path, class: 'btn btn-default' %> 
  </div>
  <div class="pull-right">
    <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit'.html_safe, edit_survey_path(@survey), class: 'btn btn-warning' %> 
  </div>
</div>
